<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/movies_list_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp" >

        <TextView
            android:id="@+id/movies_list_viewline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="|"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/movies_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/movies_list_viewline"
            android:text="03:06"/>

        <TextView
            android:id="@+id/movies_list_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/movies_list_viewline"
            android:text="10M views"/>

        <TextView
            android:id="@+id/movies_list_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/movies_list_img"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="6dp"
            android:text="vimeo" />

        <TextView
            android:id="@+id/movies_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/movies_list_viewline"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <ImageView 
            android:id="@+id/movies_list_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

</LinearLayout>